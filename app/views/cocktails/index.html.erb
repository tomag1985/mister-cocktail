<div class="container">
	<h1>Nuestros cocktails</h1>

	<div class="cards">
		<% @cocktails.each do |cocktail| %>
			<%= link_to cocktail_path(cocktail) do %>
				<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
					<h1><%= cocktail.name %></h1>
				</div>
			<% end %>
		<% end %>
	</div>
</div>