	<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>');"> 
		<div class="container">
				<h1><%= @cocktail.name %> </h1>
		</div>
	</div>
		


<div class="container mt-3">
	<div class="row">
		<div class="col-xs-12 col-md-5 col-lg-7 ml-3 mr-3 p-3 shadow-lg p-3 mb-5 bg-white rounded" style="word-wrap:break-word">
			<h3>Description</h3>
			<ul style="list-style-type:none">
				<li><%= @cocktail.description %> </li>
			</ul>
		</div>

		<div class="col-xs-12 col-md-5 col-lg-4 ml-3 mr-3 p-3 shadow-lg p-3 mb-5 bg-white rounded">
			<h3>Ingredients</h3>
			<ul style="list-style-type:none">
				<% @cocktail.doses.each do |dose| %>
					<li><strong><%= dose.ingredient.name %></strong> - <%= dose.description %> <%= link_to "(delete)", dose_path(dose), method: :delete%> </li>
			<% end %>
			</ul>
			<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-dark mt-3 w-100" %>
		</div>

		<div class="col-lg-8 shadow-lg p-3 mx-auto col-12 p-3 mb-5 bg-white rounded">
			<ul class="list-group">
				<% @cocktail.reviews.each do |review| %>
				<li class="list-group-item"><%= review.content %> <% review.rating.times do %> <i class="fas fa-star stars" style="yellow"> </i>  <% end %> </li>
				<hr>
				<% end %>
			</ul>
			<%= link_to "Add review",  new_cocktail_review_path(@cocktail), class:"btn btn-dark mt-3 mb-3 w-100" %>
		</div>		
	</div>	
</div>


